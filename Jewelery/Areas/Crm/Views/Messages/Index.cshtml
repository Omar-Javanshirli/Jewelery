@model IEnumerable<Jewelery.Models.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Crm/Views/Shared/_Layout.cshtml";
}


<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                    <li class="breadcrumb-item active">Mesajlar</li>
                </ol>
            </div>
            <h4 class="page-title">Ana Səhifə</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div><!--end row-->
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mt-0">
                  Bütün Mesajlar
                </h4>
                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Başlıq</th>

                            <th>Mesaj</th>
                            <th>Ad</th>
                            <th>Email</th>
                            <th>Tarix</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count() > 0 )
                        {

                      
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Fullname</td>
                            <td>@item.Email</td>
                            <td>@item.Date.Value.ToString("dd.MM.yyyy HH:mm")</td>

                         
                            <td><a  href="@Url.Action("delete","messages", new {Area="crm", id= item.Id })" class="btn btn-danger text-white">Sil</a></td>
                     
                        </tr>
                        }
                        }

                    </tbody>
                </table>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->

</div><!--end row-->
