@model IEnumerable<Jewelery.Models.Ad>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Crm/Views/Shared/_Layout.cshtml";
}


<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                    <li class="breadcrumb-item active">Bütün Elanlar</li>
                </ol>
            </div>
            <h4 class="page-title">Ana Səhifə</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div><!--end row-->
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mt-0">
                    Bütün Elanlar
                </h4>
                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Başlıq</th>
                            <th>Kateqoriya/Sub Kateqoriya</th>
                            <th>Şəxs</th>
                            <th>Tarix</th>
                            <th>Keçid</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {


                            foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                @item.MenuItem.MenuItemLanguages.FirstOrDefault(f => f.LangId == 1).Name / @item.Category.CategoryLanguages.FirstOrDefault(f => f.LangId == 1).Name /  @if (item.SubCategoryId != null)
                                {
                                    @item.SubCategory.SubCategoryLanguages.FirstOrDefault(f => f.LangId == 1).Name
                                }
                            </td>
                            <td>@item.User.Fullname</td>
                            <td>@item.PublishDate.ToString("dd.MM.yyyy")</td>

                            <td><a target="_blank" href="@Url.Action("index","detailed", new {Area="", id=item.Id })" class="btn btn-primary text-white">Elana bax</a></td>
                            <td>
                      
                                <a href="@Url.Action("deny","ads", new {Area="crm", id=item.Id })" class="btn btn-danger text-white">Sil</a>
                            </td>

                        </tr>
                            }
                        }

                    </tbody>
                </table>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->

</div><!--end row-->
